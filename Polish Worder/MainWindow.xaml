<Window x:Class="Polish_Worder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Polish_Worder"
        mc:Ignorable="d"
        Title="Polish worder" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="100,10,0,0" TextWrapping="Wrap" Text="Write your word here" VerticalAlignment="Top" Width="600" TextAlignment="Center" Name="TextInputBox"/>
        <Button Content="Anagram" HorizontalAlignment="Left" Margin="100,55,0,0" VerticalAlignment="Top" Width="300" Height="40" FontSize="25"/>
        <Button Content="Palindrome" HorizontalAlignment="Left" Margin="400,55,0,0" VerticalAlignment="Top" Width="300" Height="40" FontSize="25"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="600" Height="50" FontSize="25" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="100,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" TextAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Height="200" Margin="100,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600"/>

    </Grid>
</Window>
